<head>
  <%= stylesheet_link_tag "form" %>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,400;0,600;0,700;0,800;1,400;1,600;1,700;1,800&family=Oswald:wght@400;500;600;700&display=swap" rel="stylesheet"> 
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</head>
<body>
  <div class="body-bg"></div>
  <%= link_to root_path, method: :get do %>
    <%= image_tag("logotxt.png", :class => "logo") %>
  <% end %>
  
  <div class="register_layout">
    <div class="register_border">
      <h1 class="oswald username">Sign Up</h1>

      <%= form_for @user do |f|%>  

        <%= f.label :username, class: "labeltxt" %> <br>  
        <%= f.text_field :username, class: "textfield", placeholder: "Input Username..." %> <br>  

        <%= f.label :password, class: "labeltxt" %> <br>  
        <%= f.password_field :password, class: "textfield", placeholder: "Input Password..." %> <br>

        <%= f.label :email, class: "labeltxt" %> <br>  
        <%= f.text_field :email, class: "textfield", placeholder: "Input Email..." %> <br>

        <%= f.label :first_name, class: "labeltxt" %> <br>  
        <%= f.text_field :first_name, class: "textfield", placeholder: "Input First Name..." %> <br>

        <%= f.label :last_name, class: "labeltxt" %> <br>  
        <%= f.text_field :last_name, class: "textfield", placeholder: "Input Last Name..." %> <br>

        <%= f.hidden_field :role, value: 'Admin' %>
        <%= f.hidden_field :broker_role, value: 'Admin' %>
        <%= f.hidden_field :status, value: 'approved' %>
        <%= f.hidden_field :money, value: 0 %>

        <%= f.submit 'Register', :class => "registerbtn" %>
        
        <div class="centertxt">
          <%= link_to 'Already have an account? Login', '/login', :class => "loginlink", method: :get %>
        </div>
      <%end%>
    </div>
  </div>
</body>
